<div class="container">
    <div class="row" id="burger-title">
        
        <h1>Eat-Da-Burger!</h1>
    
    </div>
</div>

<div class="container">
    <div class="row" id="available burgers">
        <ul>
        {{#each burgers}}
            {{#unless this.devoured}}
                <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button class="burgerAvailable" type="submit">{{this.burger_name}} Devour it!</button>
                    </form>
                </div>
            {{/unless}}
        {{/each}}
        </ul>

        <ul>
            {{#each burgers}}
                {{#if this.devoured}}
                    <div class='burgerEaten'>
                        <div>
                            {{this.burger_name}}
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<h2>Add a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="name" name="burger_name">
  </div>

  <button type="submit" class="addBurgerBtn">Add Burger!</button>
</form>